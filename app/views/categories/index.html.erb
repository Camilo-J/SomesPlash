<h1>Categories</h1>
<br>
<%= link_to "New Category", new_category_path %>
<br>
<br>
<% @categories.each do |category| %>

  <div><%= link_to category_path(category)  do%>
      <div><%= image_tag category.photo if category.photo.attached?%>
 
    <span><%= category.name %> </span>
    <br>
    <%= category.photo_count %> photos
    
    <br>
    <span><%= category.description%></span>
    <% end %></div>
    
     <%= link_to "Edit Category", edit_category_path(category) %>
     <br>
     <%= link_to "destroy", category_path(category), data: {
            turbo_method: :delete,
            turbo_confirm: "Are you sure?"
          } %>
  </div>
  <br>
<% end %>